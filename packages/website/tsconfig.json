{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",

    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },

  "references": [
    { "path": "../utils" }
  ],

  "include": [
    "plugins",
    "src",
    "gatsby*.ts"
  ]
}
